<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <description>Editorial workflow management system</description>
    <display-name>Converge Web User Interface</display-name>
    <context-param>
        <param-name>javax.faces.CONFIG_FILES</param-name>
        <param-value>/WEB-INF/faces-config.xml</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.DEFAULT_SUFFIX</param-name>
        <param-value>.jspx</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>server</param-value>
    </context-param>
    <context-param>
        <param-name>com.sun.faces.validateXml</param-name>
        <param-value>false</param-value>
    </context-param>
    <context-param>
        <param-name>com.sun.faces.verifyObjects</param-name>
        <param-value>false</param-value>
    </context-param>
    <context-param>
        <param-name>facelets.SKIP_COMMENTS</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>facelets.LIBRARIES</param-name>
        <param-value>/WEB-INF/facelets/converge.taglib.xml;/WEB-INF/facelets/v.taglib.xml</param-value>
    </context-param>
    <context-param>
        <param-name>org.richfaces.SKIN</param-name>
        <param-value>classic</param-value>
    </context-param>
    <context-param>
        <param-name>org.ajax4jsf.VIEW_HANDLERS</param-name>
        <param-value>com.sun.facelets.FaceletViewHandler</param-value>
    </context-param>
    <context-param>
        <param-name>org.richfaces.queue.global.enabled</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>org.ajax4jsf.COMPRESS_SCRIPT</param-name>
        <param-value>true</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>UserPhotoServlet</servlet-name>
        <servlet-class>dk.i2m.converge.web.servlets.UserPhotoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalendarServlet</servlet-name>
        <servlet-class>dk.i2m.converge.web.servlets.CalendarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SpellCheckerServlet</servlet-name>
        <servlet-class>dk.i2m.converge.web.servlets.SpellCheckerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewswireItemAttachment</servlet-name>
        <servlet-class>dk.i2m.converge.web.servlets.NewswireItemAttachment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>dk.i2m.converge.web.servlets.FileUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <filter>
        <display-name>RichFaces Filter</display-name>
        <filter-name>richfaces</filter-name>
        <filter-class>org.ajax4jsf.Filter</filter-class>
        <init-param>
            <param-name>createTempFiles</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>maxRequestSize</param-name>
            <param-value>0</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>richfaces</filter-name>
        <servlet-name>Faces Servlet</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>
    <listener>
        <listener-class>com.sun.faces.config.ConfigureListener</listener-class>
    </listener>
    <listener>
        <listener-class>dk.i2m.converge.web.servlets.listeners.StartupCheckListener</listener-class>
    </listener>
    <listener>
        <listener-class>dk.i2m.converge.web.servlets.listeners.UserSessionListener</listener-class>
    </listener>
    <servlet-mapping>
        <servlet-name>UserPhotoServlet</servlet-name>
        <url-pattern>/UserPhoto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalendarServlet</servlet-name>
        <url-pattern>/vcal</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SpellCheckerServlet</servlet-name>
        <url-pattern>*.check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewswireItemAttachment</servlet-name>
        <url-pattern>/NewswireItemAttachment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/FileUploadServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>90</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Dashboard.xhtml</welcome-file>
    </welcome-file-list>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>Converge</realm-name>
        <form-login-config>
            <form-login-page>/Login.xhtml</form-login-page>
            <form-error-page>/Login.xhtml?err=1</form-error-page>
        </form-login-config>
    </login-config>
    <security-constraint>
        <display-name>Resources restricted to CONVERGE users</display-name>
        <web-resource-collection>
            <web-resource-name>General restricted pages</web-resource-name>
            <description/>
            <url-pattern>/Assignments.xhtml</url-pattern>
            <url-pattern>/Browse.xhtml</url-pattern>
            <url-pattern>/Calendar.xhtml</url-pattern>
            <url-pattern>/Concepts.xhtml</url-pattern>
            <url-pattern>/Contacts.xhtml</url-pattern>
            <url-pattern>/Dashboard.xhtml</url-pattern>
            <url-pattern>/Editions.xhtml</url-pattern>
            <url-pattern>/Help.xhtml</url-pattern>
            <url-pattern>/Inbox.xhtml</url-pattern>
            <url-pattern>/Listings-ForexRates.xhtml</url-pattern>
            <url-pattern>/Listings-StockMarkets.xhtml</url-pattern>
            <url-pattern>/Listings-WeatherForecasts.xhtml</url-pattern>
            <url-pattern>/Listings.xhtml</url-pattern>
            <url-pattern>/MediaItemArchive.xhtml</url-pattern>
            <url-pattern>/MediaItemDetails.xhtml</url-pattern>
            <url-pattern>/MyProfile.xhtml</url-pattern>
            <url-pattern>/NewsItem.xhtml</url-pattern>
            <url-pattern>/NewsItemArchive.xhtml</url-pattern>
            <url-pattern>/NewsReader.xhtml</url-pattern>
            <url-pattern>/Newswire.xhtml</url-pattern>
            <url-pattern>/NewswireItem.xhtml</url-pattern>
            <url-pattern>/Notifications.xhtml</url-pattern>
            <url-pattern>/Pipeline.xhtml</url-pattern>
            <url-pattern>/Planning.xhtml</url-pattern>
            <url-pattern>/ReportActivity.xhtml</url-pattern>
            <url-pattern>/Reporting.xhtml</url-pattern>
            <url-pattern>/Search.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>CONVERGE</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Resources restricted to CONVERGE administrators</display-name>
        <web-resource-collection>
            <web-resource-name>Administrator restricted pages</web-resource-name>
            <description/>
            <url-pattern>/administrator/*</url-pattern>
            <url-pattern>/administrator*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMINISTRATOR</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>ADMINISTRATOR</role-name>
    </security-role>
    <security-role>
        <role-name>CONVERGE</role-name>
    </security-role>
    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/SessionExpired.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/Unauthorised.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/Dashboard.xhtml</location>
    </error-page>
</web-app>
