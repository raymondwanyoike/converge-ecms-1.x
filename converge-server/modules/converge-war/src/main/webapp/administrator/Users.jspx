        <ui:define name="title">#{msgs.USER_ADMINISTRATION}</ui:define>

        <ui:define name="body">
            <a4j:keepAlive beanName="administrator_Users" />
            <a4j:region id="regMainContent">
                <converge:message for="frmPage" />
