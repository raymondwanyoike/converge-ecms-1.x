<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <description>Mobile Server for the Converge News Suite</description>
    <display-name>Converge Mobile Server</display-name>
    <context-param>
        <description>ID of the outlet</description>
        <param-name>OUTLET_ID</param-name>
        <param-value>1</param-value>
    </context-param>
    <context-param>
        <description>Secret key of the outlet</description>
        <param-name>OUTLET_KEY</param-name>
        <param-value>abcd1234</param-value>
    </context-param>
    <context-param>
        <description>Content Rendition Identifier for thumbs</description>
        <param-name>RENDITION_THUMB</param-name>
        <param-value>rnd:mobileThumb</param-value>
    </context-param>
        <context-param>
        <description>Content Rendition Identifier for stories</description>
        <param-name>RENDITION_STORY</param-name>
        <param-value>rnd:mobile</param-value>
    </context-param>
    <context-param>
        <description>Location where images can be accessed</description>
        <param-name>IMG_LOCATION</param-name>
        <param-value>/var/www/mimgs/</param-value>
    </context-param>
    <context-param>
        <description>URL where images can be accessed</description>
        <param-name>IMG_URL</param-name>
        <param-value>http://converge2.nairobistar.com/mimgs/</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <description>Localization</description>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>Messages</param-value>
    </context-param>
    <servlet>
        <servlet-name>ServletAdaptor</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAdaptor</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
